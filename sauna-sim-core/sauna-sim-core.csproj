<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>0.5.0</AssemblyVersion>
    <FileVersion>0.5.0</FileVersion>
    <Platforms>x86;x64</Platforms>
    <Version>0.5.0</Version>
    <Description>Sauna Simulator Core Library</Description>
    <Authors>Prithvisagar Shivaraman</Authors>
    <RootNamespace>SaunaSim.Core</RootNamespace>
    <AssemblyName>SaunaSimCore</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="PShivaraman.AviationCalcUtilNet.win-$(Platform)" Version="1.0.4" Condition="$([MSBuild]::IsOSPlatform('Windows'))" />
    <PackageReference Include="PShivaraman.AviationCalcUtilNet.osx-$(Platform)" Version="1.0.4" Condition="$([MSBuild]::IsOSPlatform('OSX'))" />
    <PackageReference Include="PShivaraman.AviationCalcUtilNet.linux-$(Platform)" Version="1.0.4" Condition="$([MSBuild]::IsOSPlatform('Linux'))" />
  </ItemGroup>
</Project>